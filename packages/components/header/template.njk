{% from "node_modules/@cor-web/components/logo/macro.njk" import corLogo %}

<a class="cor-skip-link visually-hidden" href="#main-content">Skip to content</a>
<cor-header>

  <a class="cor-logo" href="{{ site.url }}">{{ corLogo() }}</a>
  
  <cor-header-toolbar>
  </cor-header-toolbar>
  <cor-header-navbar>

    <nav>
      <ul clicky-menu class="no-js cor-header-navbar__level1">
        {% for navitem in params.nav %}
        <li>
          <a href="{{ navitem.link }}">
            {{ navitem.text }}
            {% if navitem.subnav %}
            <svg aria-hidden="true" width="16" height="16">
              <use xlink:href="#arrow" />
            </svg>
            {% endif %}
          </a>
          {% if navitem.subnav %}
          <ul class="cor-header-navbar__subnav cor-header-navbar__level2">
            {% for subnavitem in navitem.subnav %}
            <li>
              <a href="{{ subnavitem.link }}" id="{{ subnavitem.text }}_label">{{ subnavitem.text }}</a>
             
              {% if subnavitem.subnav %}
              <div class="cor-header-navbar__subpanel">
                <span class="cor-header-navbar__subpanel__heading">{{ subnavitem.text }}</span>
                <div class="cor-header-navbar__subpanel__description">
                  {{ subnavitem.description }}
                </div>
                <ul class="cor-header-navbar__level3" aria-labelledby="{{ subnavitem.text }}_label">
                  {% for subsubnavitem in subnavitem.subnav %}
                  <li>
                    <a href="{{ subsubnavitem.link }}">{{ subsubnavitem.text }}</a>
                  </li>
                  {% endfor %}
                </ul>
              </div>
              {% endif %}

            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </nav>
  </cor-header-navbar>
</cor-header>