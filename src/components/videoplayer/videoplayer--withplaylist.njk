
<article class="cor-video-container bg padding">
  <article>
    <h1 class="cor-h5" id="links">{{ video.title }}​</h1>
    <video width="100%" controls
      poster="{{ video.poster }}​" >
      {% for source in sources %}
      <source
        src="{{ video.sources.file }}"
        type="{{ video.sources.type }}">
      {% endfor %}
      {{ fallbackText }}
    </video>

  </article>
  
  <div>
    <h4>Watch more</h4>
    <ul class="list-none cor-grid" style="--threshold: 150px">
      {% for video in relatedVideos %}
      <li>
        <a href="{{ video.id }}​" class="cor-with-sidebar cor-with-sidebar--left" style="--sideWidth: 150px">
          <span class="cor-video-preview"><img src="{{ video.poster }}​" alt="" width="100"/></span>
          <span>{{ video.title }}​</span>
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
</article>