<cor-cover class="{% if modifier %}{% for item in modifier %}cor-cover--{{ item }} {% endfor %}{% endif %}">
  
  <div>
    <hgroup class="cor-cover__header">

      <h1>{% if title %} {{ title }} {% endif %}</h1>
      
      {% if subtitle %}
        <h2>{{ subtitle }}</h2>
      {% endif %}
    </hgroup>
  </div>

  {% if poster %}
  <div class="cor-cover__picture">
    <img src="{{ poster.src }}" alt="{{ poster.alt }}" />
  </div>
  {% endif %}

  <div class="cor-cover__description cor-stack max-width:measure">
    <div class="txt-xl">{{ description }}</div>

    {% if cta %}
    <p>
      {% for link in cta %}
      <a href="{{ link.link }}" class="txt-xl icon icon-after cor-cover__cta" style="--icon:var(--icon-chevron-right)">{{ link.text }}</a>
      {% endfor %}
    </p>
    {% endif %}
  </div>

</cor-cover>