  </cor-cover>

  <div role="separator"></div>

  <div class="cor-with-sidenav  cor-content ">

        {% render "@toc--dynamic" , {nav: contentnav}, true %}


    <main class="cor-containerWithDivider cor-containerWithDivider--space-l">
      
      

      <section class="padding-top-0">
        <h2 id="title">Title for this section</h2>
          <h3>President</h3>
          <ul class="m">
            <li>Carpathians IG</li>
            <li>ECR Group</li>
          </ul>

          <h3>Rapporteur</h3>
          <ul  class="m">
            <li>7th Mandate - Commission COTER</li>
          </ul>

          <h3>Member</h3>
          <ul class="m">
            <li>7th Mandate - Commission COTER</li>
            <li>7th Mandate - Commission ENVE</li>
            ⁪<li>Conference of Presidents</li>
            <li>CoR Delegation to the CoFoE</li>
            <li>Enlargement Day</li>
            <li>JCC Serbia</li>
            <li>Polish delegation</li>
            <li>WG Ukraine</li>
          </ul>
      </section>

      <section class="cor-stack">
        <h2 id="opinions">Opinions</h2>
        
        <section>
          <h3>Adopted Opinions</h3>

          <div class="cor-containerWithDivider--dotted cor-stack--2xs">
          {% for opinion in opinions %}
            {% render "@card" , {date: opinion.date,  titleLevel: "h4", title: opinion.title, image: opinion.image, cardExtraClass: "padding-y--3xs" } %}
          {% endfor %}
          </div>
        </section>
      </section>

        <section>
          <h2 id="news">Latest news</h3>

          <div class="cor-l-2andlist">
          {% for newsitem in news %}

            {% set cardExtraClass = "" %}
            {% if loop.index < 3 %}
              {% set cardExtraClass = "bg padding" %}
            {% endif %}
            {% render "@card" , {promo: newsitem.promo, date: newsitem.date, titleLevel: "h4", title: newsitem.title, image: newsitem.image, cardExtraClass: cardExtraClass } %}
          {% endfor %}
          </div>
        </section>

        <section>
          <h2 id="videos">Videos</h2>
          {% render "@videoplayer--withplaylist" %}
        </section>

        <section>
          <h2 id="photos">Photos</h2>
          {% render "@slider"  %}
        </section>

    </main>

  </div>

</div>
